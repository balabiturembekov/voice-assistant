# Twilio Credentials
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Company Information
COMPANY_NAME=Your Company Name
WEBSITE_URL=https://lisa.automatonsoft.de

# Voice Configuration
VOICE_NAME=alice

# Database Configuration
DATABASE_URL=sqlite:////home/app/voice_assistant.db

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Email Configuration (for voice message notifications)
# Support both EMAIL_* and MAIL_* variables for compatibility
EMAIL_HOST=w01da240.kasserver.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=order@jvmoebel.de
EMAIL_HOST_PASSWORD=your_password_here
DEFAULT_FROM_EMAIL=order@jvmoebel.de
EMAIL_CHARSET=utf-8
EMAIL_CONTENT_TYPE=text/plain; charset=utf-8

# Alternative MAIL_* variables (also supported)
MAIL_SERVER=w01da240.kasserver.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=order@jvmoebel.de
MAIL_PASSWORD=your_password_here
MAIL_DEFAULT_SENDER=order@jvmoebel.de
MAIL_RECIPIENT=recipient@example.com
# HELO hostname for SMTP (fixes "helo/hostname mismatch" errors)
# IMPORTANT: Should match the actual server hostname (MAIL_SERVER), not email domain
# Default: uses MAIL_SERVER (w01da240.kasserver.com)
# Only set this if your server requires a specific HELO hostname different from MAIL_SERVER
# MAIL_HELO_HOSTNAME=w01da240.kasserver.com

# External Transcription Service Configuration
# Options: 'twilio' (default, limited to English), 'google', 'deepgram'
# For accurate German transcription, use 'google' or 'deepgram'
TRANSCRIPTION_SERVICE=twilio

# Google Cloud Speech-to-Text (optional, for better transcription)
# Requires: pip install google-cloud-speech
# Setup: Create service account in Google Cloud Console, download JSON key
# Set GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
# Or use: gcloud auth application-default login

# Deepgram API (optional, for better transcription)
# Sign up at: https://deepgram.com/
# Get API key from: https://console.deepgram.com/
DEEPGRAM_API_KEY=your_deepgram_api_key_here